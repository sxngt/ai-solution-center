# AI Solution Center Environment Variables
# Copy this file to .env and update with your actual values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Environment (development, production, test)
NODE_ENV=development

# Application port (default port for gateway/main service)
PORT=3000

# CORS configuration
CORS_ORIGIN=*

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=developer
DATABASE_PASSWORD=dev123
DATABASE_NAME=ai_solution

# Database connection options
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true
DATABASE_RETRY_ATTEMPTS=3
DATABASE_RETRY_DELAY=3000
DATABASE_MAX_QUERY_TIME=30000
DATABASE_MIGRATIONS_RUN=false

# ===========================================
# REDIS CONFIGURATION
# ===========================================

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev123

# ===========================================
# LLM PROVIDERS CONFIGURATION
# ===========================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=optional-org-id

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=sk-ant-your-claude-api-key-here

# Ollama Configuration (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434

# Default LLM Provider (openai, claude, ollama)
LLM_DEFAULT_PROVIDER=openai

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Password hashing rounds (12 is recommended)
BCRYPT_ROUNDS=12

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log format (json, simple)
LOG_FORMAT=simple

# ===========================================
# RATE LIMITING
# ===========================================

# Rate limiting (requests per minute)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================

# File upload limits
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=AI Solution Center <noreply@aisolution.com>

# ===========================================
# MONITORING & ANALYTICS (Optional)
# ===========================================

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn-here

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Enable GraphQL Playground in development
GRAPHQL_PLAYGROUND=true

# Enable Swagger/OpenAPI documentation
ENABLE_SWAGGER=true

# Debug mode
DEBUG=false

# ===========================================
# SERVICE-SPECIFIC CONFIGURATION
# ===========================================

# Each service can have its own specific configuration
# These will be overridden by individual service .env files

# Example service ports (adjust as needed)
CHAT_SERVICE_PORT=3001
DOCUMENT_SERVICE_PORT=3002
ANALYSIS_SERVICE_PORT=3003

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Cache TTL (seconds)
CACHE_TTL=3600

# ===========================================
# SECURITY HEADERS
# ===========================================

# Enable security headers
ENABLE_HELMET=true

# Content Security Policy
CSP_ENABLED=true

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=false

# ===========================================
# DEVELOPMENT OVERRIDES
# ===========================================

# Override for development (these should not be used in production)
SKIP_AUTH=false
MOCK_LLM_RESPONSES=false
ENABLE_DEBUG_ROUTES=false